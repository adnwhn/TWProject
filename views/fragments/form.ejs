<form id="form_reg"  method="post" class="date"  action="<%= locals.action %>"  enctype="multipart/form-data">
    <p>
        <label>
            Username: <input type="text" name="username" id="inp-username" value="user<%= Math.floor(Math.random()*100000) %>" required pattern="[A-Za-z0-9]+">
        </label>
    </p>
    <p>
        <label>
            Last name: <input type="text" name="lastname" id="inp-lastname"  value="Insert last name..." >
        </label>
    </p>
    <p>
        <label>
            First name: <input type="text" name="firstname" id="inp-firstname" value="Insert first name..."  >
        </label>
    </p>
    <p>
        <label>
            Password: <input id="passw" type="password" required  name="password" value="">
        </label> <p id="txtpass">at least one uppercase letter, one digit and 8 characters</p>
    </p>
    <p id="p-reintrod">
        <label >
            Retype password: <input id="repeatpassw" required type="password" name="repeatpassword" value="">
        </label>
    </p>
    <p>
        <label>
            Email: <input type="text" name="email" id="inp-email" required value="user@gmail.com"  size="23">
        </label>
    </p>
    <p id="birthdate">
        <label>
            Birth date: <input type="date" name="birthdate" id="inp-birthdate">
        </label>
    </p>
    <p>
        <label>
            Color of chat: <select name="chat_color" id="sel-color">
                <option value="black" selected>black</option>
                <option value="blue">blue</option>
                <option value="green">green</option>
                <option value="magenta">magenta</option>
            </select>
        </label>
    </p>
    <p>
        <label>
            Phone number: <input type="tel" name="phone" id="phone">
        </label>
    </p>
    <p>
        <label>
            Picture: <input type="file" name="image" id="image">
        </label>			
    </p>
    <p>		
        <input type="submit" value="Send">
        <input type="reset" value="Reset">
    </p>
    <br>
</form>